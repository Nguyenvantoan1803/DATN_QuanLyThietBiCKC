<script>
    $('.SparePart').addClass('active');
    $('.SparePartTable').addClass('active');
    $('.searchType').select2();

    $(document).ready(function () {
        var table = $('#SparePart_Table').dataTable({
            "bFilter": false,
            "bLengthChange": false,
            "iDisplayLength": 25,
            "oLanguage": {
                "sInfo": "Hiển thị từ _START_ đến _END_ của _TOTAL_ phụ tùng",
                "oPaginate": {
